<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"

    android:background="#FFFFFF"
    android:padding="6dip">


    <TextView android:id="@+id/txtShelfItemStatus"
        android:layout_height="fill_parent"
        android:layout_width="50dip"

        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="10"

        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dip"
        />

    <TextView android:id="@+id/txtShelfItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="26dip"

        android:layout_toRightOf="@id/txtShelfItemStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="this is the book. scome blah blah"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:singleLine="true"
        android:ellipsize="marquee"
        />

    <TextView android:id="@+id/txtShelfItemAuthor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/txtShelfItemStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:textSize="10dp"
        android:textColor="#000000"
        android:text="by some guy"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:singleLine="true"
        android:ellipsize="marquee"
        />



</RelativeLayout>
